<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <RadioGroup
                android:id="@+id/usertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor     "
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient"
                    android:textSize="20sp" />

            </RadioGroup>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/name"
                android:textColorHint="@android:color/black"
                android:padding="8dp"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Name"
                android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/email"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Email"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/phone"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:hint="Phone"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:id="@+id/time_input"
                android:visibility="gone"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/time_signup"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Time Slot"
                    android:visibility="gone"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:id="@+id/days_input"
                android:visibility="gone"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/days_signup"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:visibility="gone"
                    android:hint="Days Available"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:id="@+id/venue_input"
                android:visibility="gone"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/venue_signup"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Venue"
                    android:visibility="gone"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_height="56dp"
                android:layout_width="match_parent"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/password"
                    android:textColorHint="@android:color/black"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Password"
                    android:ems="10"/>

            </com.google.android.material.textfield.TextInputLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:id="@+id/specialist_linear"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Choose Speciality:"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_specialist"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:padding="5dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="NEXT" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>