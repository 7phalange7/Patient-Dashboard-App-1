<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <TextView
            android:id="@+id/doctor_show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Atreyee Mukherjee"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <TextView
            android:id="@+id/doctor_show_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="atm1504.in@gmail.com"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <TextView
            android:id="@+id/doctor_show_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="8967570983"
            android:padding="8dp"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Availability :"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Days:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/show_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monday - Friday"
                android:padding="8dp"
                android:textSize="24sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Time:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/show_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="09:00 AM - 11:00 AM , 03:00 PM - 06:00 PM"
                android:padding="8dp"
                android:textSize="24sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EBEBEB"
        android:padding="5dp"
        app:cardBackgroundColor="#EBEBEB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Venue: "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/show_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Amt Hospital , Room - RA112"
                android:padding="8dp"
                android:textSize="24sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>